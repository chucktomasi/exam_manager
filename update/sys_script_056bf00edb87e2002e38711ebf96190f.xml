        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	// On close, trigger the pass/fail notifications
	
	if (current.active.changesTo(false) && current.state != 'Canceled') {
		if (current.pass_fail == 'Pass')
			gs.eventQueue('exam.pass', current, current.score, current.exam.min_score);
		else
			gs.eventQueue('exam.fail', current, current.score, current.exam.min_score);
	}
	
	// Send notification when exam goes to 'Ready' state
	if (current.state.changesTo('Ready')) {
		gs.eventQueue('exam.ready', current, current.user.getDisplayValue(), new GlideDateTime().getDisplayValue());
	}
	
})(current, previous);]]></script>
